nodist_bin_SCRIPTS = gnome-music

jsdir = $(pkgdatadir)
dist_js_DATA = \
	album_art_cache.js \
	browse_history.js \
	collection_view.js \
	list_store.js \
	player.js \
	playlist_songs.js \
	toolbar.js \
	widgets.js \
	application.js \
	clickable_label.js \
	gnome-music.in \
	main.js \
	package.js \
	playlist.js \
	playlist-view.js \
	searchbar.js \
	view.js \
	$(NULL)

gnome-music: gnome-music.in
	$(AM_V_GEN) sed \
		-e "s|[@]GJS@|$(GJS)|g" \
		-e "s|[@]PACKAGE_NAME@|$(PACKAGE_NAME)|g" \
		-e "s|[@]PACKAGE_VERSION@|$(PACKAGE_VERSION)|g" \
		-e "s|[@]prefix@|$(prefix)|g" \
		-e "s|[@]libdir@|$(libdir)|g" \
		-e "s|[@]pkgdatadir@|$(pkgdatadir)|g" \
		$< > $@
	@chmod +x $@

EXTRA_DIST = gnome-music.in
DISTCLEANFILES = gnome-music

-include $(top_srcdir)/git.mk
